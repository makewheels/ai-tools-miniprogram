.button-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20px;
}

.button {
  width: 200rpx;
  height: 100rpx;
  background-color: #07c160;
  color: #fff;
  border-radius: 6rpx;
  margin-top: 20rpx;
  display: flex; /* 添加 display: flex */
  justify-content: center; /* 垂直居中 */
  align-items: center; /* 水平居中 */
}