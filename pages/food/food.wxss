.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  background-color: #ffffff;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.subtitle {
  font-size: 28rpx;
  margin-top: 10rpx;
}

.content {
  width: 100%;
  margin-top: 30rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
}

.description {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 30rpx;
}

.upload-container {
  margin-top: 30rpx;
  text-align: center;
}

.upload-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 40rpx;
  border-radius: 10rpx;
}

.upload-tip {
  margin-top: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.result-container {
  margin-top: 30rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}